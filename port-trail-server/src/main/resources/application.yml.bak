server:
  port: 29892
  servlet:
    context-path: /pts

spring:
  application:
    name: port-trail-server
  servlet:
    multipart:
      max-file-size: 1000MB
      max-request-size: 1000MB
      enabled: true

  jackson:
    serialization:
      write-dates-as-timestamps: true
    deserialization:
      fail-on-unknown-properties: false

  datasource:
    url: jdbc:mysql://xx.xxx.xx.xxx:xxxxx/port-trail?useSSL=false&allowPublicKeyRetrieval=true&useUnicode=true&characterEncoding=UTF-8&characterSetResults=UTF-8&preserveInstants=true&connectionTimeZone=GMT%2B8&forceConnectionTimeZoneToSession=true&rewriteBatchedStatements=true&nullCatalogMeansCurrent=true
    username: xxx
    password: xxx
    driver-class-name: com.mysql.cj.jdbc.Driver
    hikari:
      pool-name: HikariCP
      auto-commit: false
      transaction-isolation: 2
      # 最小空闲连接数
      minimum-idle: 1
      # 连接池最大连接数
      maximum-pool-size: 3
      # 空闲连接存活最大时间(ms)，配置为10分钟
      idle-timeout: 600000
      # 此属性控制池中连接的最长生命周期(ms)，配置为30分钟
      max-lifetime: 1800000
      # 数据库连接超时时间(ms)，配置为3秒
      connection-timeout: 3000
      # 连接测试 query
      connection-test-query: select 1

mybatis:
  mapper-locations: classpath:/mybatis/mapper/*.xml
  configuration:
    log-impl: org.apache.ibatis.logging.stdout.StdOutImpl
    map-underscore-to-camel-case: true
    cache-enabled: false
    local-cache-scope: statement
  type-handlers-package: cn.addenda.porttrail.
